<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
		http://cxf.apache.org/jaxws 
		http://cxf.apache.org/schemas/jaxws.xsd"
	default-lazy-init="true">

	<!-- CXF 配置 -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />


	<!-- demo:配置提供Web Service的Bean实例 ,将系统的业务逻辑组件注入该Bean实例中
	<bean id="wsHelloWorld" class="com.hhz.uums.service.impl.WSHelloWorldImpl">
	  	<property name="plasAppManager" ref="plasAppManager"/>
	</bean>
	-->

	 
 	<!-- service -->
	<bean id="wsPlasService" class="com.hhz.uums.service.impl.WSPlasServiceImpl"></bean>
	<jaxws:endpoint id="plasService"
		implementor="#wsPlasService"
		address="/WSPlasService" >
	</jaxws:endpoint>
	
</beans>